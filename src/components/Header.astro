---
const { title } = Astro.props;
---

<header>
  <p class="name">{title}</p>
  {
    Astro.url.pathname != "/" ? (
      <a href="/" title="Zpět na hlavní stránku">
        {"Zpět"}
      </a>
    ) : null
  }
</header>
<style>
  header {
    width: 100vw;
    position: sticky;
    top: 0;
    background-color: rgba(255, 253, 246, 0.7);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 13px;
    z-index: 1;
  }
  .name {
    padding-left: 5vw;
    font-weight: bold;
    font-size: 44px;
  }
  a {
    padding-right: 5vw;
    font-size: 15px;
    color: black;
  }
  @media screen and (min-width: 1600px) {
    header {
      max-width: 1600px;
      margin: 0 auto;
    }
  }
</style>
