---
import { Image } from "astro:assets";
import image from "../img/image.jpg";
---

<div class="container">
  <Image src={image} alt="pic" />
  <Image src={image} alt="pic" />
  <Image src={image} alt="pic" />
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  img {
    width: 100%;
    padding-bottom: 8px;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  @media screen and (min-width: 992px) {
    img {
      width: 40%;
      flex: 1;
    }
    .container {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 24px;
    }
  }
</style>
